<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-5 ob-10" style="height: 85px">
  <div class="container-fluid">
    <%= link_to books_path, class: "navbar-brand " do %>
      <%= image_tag "vrailogo.png",class:"logo"%>

    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My reservations", my_reservations_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Books", my_books_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">

          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.avatar.attached? %>
              <%= cl_image_tag(current_user.avatar.key, :width => 40, :height => 40,
                 :crop => :thumb, :gravity => :face, class: "avatar") %>
            <% else %>
              <%= image_tag "default-profile-picture", class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Account Settings", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Signup", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
