<h1>Welcome to your Books!</h1>
<h3>Here are your Books registered for rental:</h3>
<br>
<div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "Add a new book", new_book_path, class: "btn btn-primary rounded-pill" %>
  </div>
<br>
<div class="card-container row">
  <% @user_books.each do |book| %>
    <div class="book-cards co-12 col-sm-6 col-md-4 mb-3">
      <%= link_to book_path(book), class:"text-decoration-none" do %>
        <div class="card-category" data-aos="zoom-in", url(<%= asset_path('default-book.png') %>)>
          <div class="img-card d-flex align-items-center justify-content-center">
            <%= image_tag book.picture_url, class: "img-fluid max-width: 200px height: auto img-thumbnail my-5" %>
          </div>
          <h5><%= book.title %></h5>
          <h6><%=book.reservation_price%>â‚¬ / Day</h6>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
