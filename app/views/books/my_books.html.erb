<h1>Welcome to your Books!</h1>
<h3>Here are your Books registered for rental:</h3>
<br>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "Add a new book", new_book_path, class: "btn btn-primary rounded-pill" %>
  </div>
<br>

<div class="row">
<% @user_books.each do |book| %>
  <div class="co-12 col-sm-6 col-md-4 mb-3">
    <%= link_to book_path(book), class:"text-decoration-none" do %>
      <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3), url(<%= asset_path('default-book.png') %>)">
        <div>
          <%= image_tag "default-book.png", class: "img-fluid img-thumbmail my-5" %>
          <h5><%= book.title %></h5>
          <h6><%=book.reservation_price%>€ / Day</h6>
        </div>
        <% if current_user == book.user %>
                <%= link_to "Supprimer", book_path(book), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette review?" }, class: "btn btn-info btn-sm " %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end%>
</div>
